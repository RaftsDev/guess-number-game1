<configuration>
    <appender name="STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
        <encoder name="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%-5level] %logger{10} - %message%n</pattern>
        </encoder>
    </appender>
    <logger name="academy.learnprogramming" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>